<article id="post_type-view" class="post_type_<%= @post_type.slug %>">
    <div class="px-8 lg:px-24">
      <div class="border bt-0 px-4 pt-8">
        <div class="flex flex-wrap flex-row">
          <div class="w-full lg:w-2/3">
            <div class="w-full">
              <article class="post-content px-2">
                  <div class="">
                    <div class=" px-3 py-2">
                      <h1><%= raw @post_type.the_title %> <%= @post_type.the_edit_link %></h1>
                      <div class="text-sm py-2">
                          <time datetime=""><%= l(@post_type.created_at, format: "%-d de %B de %Y %-H:%M %p") %></time>
                      </div>
                    </div>
                  </div>
                  <div class="px-3 py-4">
                      <%= raw @post_type.the_content %>
                  </div>
              </article>
              <div>
                <div class="py-4 flex flex-row flex-wrap content-start items-start justify-start ">
                    <% @posts.decorate.each do |post| %>
                        <%= render partial: "partials/#{post.post_type.slug}_item", locals: {post: post, mode: :list} rescue nil %>
                    <% end %>
                </div>
                <%= raw cama_do_pagination(@posts) %>
              </div>
            </div>
          </div>
          <div class="w-full lg:w-1/3">
            <div class="pb-6 lg:pb-1 pt-4 lg:pt-0 px-2">
              <%= render partial: "partials/banners"  %>
            </div>
          </div>
        </div>
      </div>
    </div>
</article>


